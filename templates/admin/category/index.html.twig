{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Gestion catégories</h1>
    
    <p>
        <a href="{{ path('app_admin_category_edit') }}">
            Ajouter une catégorie
        </a>
    </p>
    
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th width="200px"></th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-info"
                        href="{{ path('app_admin_category_edit', {id: category.id}) }}">
                        Modifier
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}