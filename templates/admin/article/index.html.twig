{# admin/article/index.html.twig #}
{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Gestion articles</h1>
    
    <p>
        <a href="{{ path('app_admin_article_edit') }}">
            Ajouter un article
        </a>
    </p>
    
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Date de publication</th>
            <th>Cat√©gorie</th>
            <th>Auteur</th>
            <th>Illustration</th>
            <th width="250px"></th>
        </tr>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.publicationDate|date('d/m/Y H:i') }}</td>
                <td>{{ article.category }}</td>
                <td>{{ article.author }}</td>
                <td>
                    {% if article.image is not null %}
                        <img src="{{ asset('images/' ~ article.image) }}" width="50px">
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-info"
                        href="{{ path('app_admin_article_edit', {id: article.id}) }}">
                        Modifier
                    </a>
                        <a class="btn btn-danger"
                        href="{{ path('app_admin_article_delete', {id: article.id}) }}">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}